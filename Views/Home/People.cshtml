@model IList<AglTest.Models.PeopleInfo>

@{
    ViewData["Title"] = "People";
}

<h2>People</h2>




        <h4>Male</h4>

    
    @for (int i = 0; i < Model.Count(); i++)
    {
        @foreach (var item in Model)
        {
            <ul>


                @if (item.pets != null && item.gender == "Male")

                {
                    @foreach (var item1 in item.pets)
                    {
                        @if (item1.type == "Cat")
                        {
                            <li>
                                @Html.DisplayFor(m => item1.name)
                            </li>
                        }
                    }
                }

            </ul>

        }
        break;
    }
   
        
        <h4>Female</h4>

    
    @for (int i = 0; i < Model.Count(); i++)
    {
        @foreach (var item in Model)
        {
        <ul>


              @if (item.pets != null && item.gender == "Female")

    {
        @foreach (var item1 in item.pets)
        {
            @if (item1.type == "Cat")
            {
                <li>
                    @Html.DisplayFor(m => item1.name)
                </li>
            }
        }
    }

        </ul>

        }
        break;
    }



